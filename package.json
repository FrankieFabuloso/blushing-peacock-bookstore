  "scripts": {
    "start": "nodemon app.js",
    "db:env": "echo DATABASE_URL=postgres://`whoami`@localhost:5432/blushing-peacock-books >> .env",
    "db:create": "createdb simpleBookstore",
    "db:init": " psql blushing-peacock-books < ./database/schema.sql",
